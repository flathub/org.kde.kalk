{
    "id": "org.kde.kalk",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "kalk",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "mpfr",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/mpfr/mpfr-4.2.1.tar.xz",
                    "sha256": "277807353a6726978996945af13e52829e3abd7a9a5b7fb2793894e18f1fcbb2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 2019,
                        "stable-only": true,
                        "url-template": "https://ftp.gnu.org/gnu/mpfr/mpfr-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kf5feedback",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/jbbgameich/qtfeedback/",
                    "commit": "a2fe291197c3a8912dbd1bc0a870c081c446e317"
                }
            ]
        },
        {
            "name": "kalk",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DQt5Feedback_DIR=/app/lib/cmake/Qt5Feedback"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.4/src/kalk-23.08.4.tar.xz",
                    "sha256": "2cd6eee395ce7ff70d274ca55c99e2ad61ee8162ce34712d33eb696a6e9eecd9",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 234907,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kalk-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
