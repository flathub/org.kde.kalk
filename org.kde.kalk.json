{
    "id": "org.kde.kalk",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "command": "kalk",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "mpfr",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/mpfr/mpfr-4.2.1.tar.xz",
                    "sha256": "277807353a6726978996945af13e52829e3abd7a9a5b7fb2793894e18f1fcbb2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 2019,
                        "stable-only": true,
                        "url-template": "https://ftp.gnu.org/gnu/mpfr/mpfr-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kalk",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DQt5Feedback_DIR=/app/lib/cmake/Qt5Feedback"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.02.0/src/kalk-24.02.0.tar.xz",
                    "sha256": "9dcae334181bb5f50c0e649257d33dc604939f27431b796f1a5c76f9e795dba9",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 234907,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kalk-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
