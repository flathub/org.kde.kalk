{
    "id": "org.kde.kalk",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "kalk",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "mpfr",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/mpfr/mpfr-4.2.2.tar.xz",
                    "sha256": "b67ba0383ef7e8a8563734e2e889ef5ec3c3b898a01d00fa0a6869ad81c6ce01",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 2019,
                        "url-template": "https://ftp.gnu.org/gnu/mpfr/mpfr-$version.tar.xz"
                    }
                }
            ]
        },
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "libqalculate",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Qalculate/libqalculate/releases/download/v5.8.1/libqalculate-5.8.1.tar.gz",
                    "sha256": "59588d69475cbb374b0b90ddef731802edd5b2da696ef706d0ca5fff4dbcfdfa",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 230126,
                        "url-template": "https://github.com/Qalculate/libqalculate/releases/download/v$version/libqalculate-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kirigamiaddons",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.10.0.tar.xz",
                    "sha256": "c98f92bf7c452e12f6dc403404215413db3959fe904ad830ead0db6bb09b3d11",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242933,
                        "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kalk",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.2/src/kalk-25.08.2.tar.xz",
                    "sha256": "f439627aa0980290a2bbf78b61b1a03d38b7de1c1aaa71708867bb5edd7dd083",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 234907,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kalk-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
